<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RuKiSo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RuKiSo"
    xmlns:pages="clr-namespace:RuKiSo.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="RuKiSo">

    <FlyoutItem Title="Sản phẩm" Icon="dotnet_bot.png">
        <ShellContent
            ContentTemplate="{DataTemplate pages:ProductPage}"
            Route="ProductPage" />
    </FlyoutItem>

    <FlyoutItem Title="Sản xuất" Icon="dotnet_bot.png">
        <ShellContent
            ContentTemplate="{DataTemplate pages:BatchPage}"
            Route="BatchPage" />
    </FlyoutItem>

    <FlyoutItem Title="Nguyên liệu" Icon="dotnet_bot.png">
        <ShellContent
            ContentTemplate="{DataTemplate pages:IngredientPage}"
            Route="IngredientPage" />
    </FlyoutItem>

</Shell>
