<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="RuKiSo.UI.Views.AddProductPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    <Grid
        BackgroundColor="Yellow"
        ColumnDefinitions="300,300"
        RowDefinitions="auto,30,50,30,50">
        <Label
            Grid.ColumnSpan="2"
            BackgroundColor="Green"
            HorizontalOptions="FillAndExpand"
            HorizontalTextAlignment="Center"
            Text="Thêm sản phẩm"
            TextColor="Black" />

        <Label Grid.Row="1" Text="Tên sản phẩm" />
        <Label
            Grid.Row="1"
            Grid.Column="1"
            Text="Nguyên liệu chính" />
        <Entry Grid.Row="2" />
        <Entry Grid.Row="2" Grid.Column="1" />
        <Label Grid.Row="3" Text="Số lượng" />
        <Label
            Grid.Row="3"
            Grid.Column="1"
            Text="Giá bán" />
        <Entry Grid.Row="4" />
        <Entry Grid.Row="4" Grid.Column="1" />
    </Grid>
</toolkit:Popup>
