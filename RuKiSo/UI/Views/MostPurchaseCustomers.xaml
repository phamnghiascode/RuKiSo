<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="RuKiSo.UI.Views.MostPurchaseCustomers"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid
        ColumnDefinitions="325,*"
        HeightRequest="127"
        WidthRequest="394">
        <CollectionView
            x:Name="QuickTransferCollectionView"
            HorizontalScrollBarVisibility="Never"
            ItemTemplate="{StaticResource MostPurchaseCustomers}"
            ItemsSource="{Binding MostPurchaseCustomers}"
            WidthRequest="325">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout ItemSpacing="14" Orientation="Horizontal" />
            </CollectionView.ItemsLayout>
        </CollectionView>
        <ImageButton
            Grid.Column="1"
            Aspect="AspectFill"
            Clicked="Button_Clicked"
            CornerRadius="25"
            HeightRequest="50"
            Source="nextbutton.png"
            WidthRequest="50" />
    </Grid>
</ContentView>
