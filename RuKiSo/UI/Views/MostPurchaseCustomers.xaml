<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="RuKiSo.UI.Views.MostPurchaseCustomers"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:resource="clr-namespace:RuKiSo.Resources"
    xmlns:ui="clr-namespace:RuKiSo.UI">
    <Grid
        ColumnDefinitions="325,*"
        HeightRequest="{x:Static ui:AppDimens.Height127}"
        WidthRequest="{x:Static ui:AppDimens.Height394}">
        <CollectionView
            x:Name="QuickTransferCollectionView"
            HorizontalScrollBarVisibility="Never"
            ItemTemplate="{StaticResource MostPurchaseCustomers}"
            ItemsSource="{Binding MostPurchaseCustomers}"
            WidthRequest="{x:Static ui:AppDimens.Height325}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout ItemSpacing="{x:Static ui:AppDimens.Height14}" Orientation="Horizontal" />
            </CollectionView.ItemsLayout>
        </CollectionView>
        <ImageButton
            Grid.Column="1"
            Aspect="AspectFill"
            Clicked="Button_Clicked"
            CornerRadius="25"
            HeightRequest="{x:Static ui:AppDimens.Height50}"
            Source="nextbutton.png"
            WidthRequest="{x:Static ui:AppDimens.Height50}" />
    </Grid>
</ContentView>
