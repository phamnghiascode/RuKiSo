<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="RuKiSo.UI.Views.Header"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:RuKiSo.UI.Views"
    xmlns:resource="clr-namespace:RuKiSo.Resources"
    xmlns:ui="clr-namespace:RuKiSo.UI">
    <Grid
        BackgroundColor="{x:Static ui:AppColors.White}"
        ColumnDefinitions="auto, *, auto, auto"
        HeightRequest="{x:Static ui:AppDimens.Height80}">
        <Label Style="{x:StaticResource PageTitleLabelStyle}" Text="{Binding Title}" />
        <Picker
            Grid.Column="2"
            Margin="0,0,20,0"
            HeightRequest="30"
            ItemsSource="{Binding ScaleValues}"
            SelectedIndex="0"
            WidthRequest="100" />
        <controls:NotificationButton Grid.Column="3" />
    </Grid>
</ContentView>