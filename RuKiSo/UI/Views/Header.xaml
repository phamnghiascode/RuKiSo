<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="RuKiSo.UI.Views.Header"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:RuKiSo.UI.Views"
    xmlns:ui="clr-namespace:RuKiSo.UI">
    <Grid ColumnDefinitions="auto, *, auto, auto" HeightRequest="{x:Static ui:AppDimens.Height100}">
        <Label
            HorizontalOptions="Center"
            Text="{Binding Title}"
            TextColor="Black"
            VerticalOptions="Center" />
        <controls:CircleButton
            Grid.Column="2"
            ImageSource="notification.png"
            Size="50"
            VerticalOptions="Center" />
    </Grid>
</ContentView>