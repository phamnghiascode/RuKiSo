<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="RuKiSo.Views.IngredientPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:RuKiSo.UI.Views"
    xmlns:resource="clr-namespace:RuKiSo.Resources"
    xmlns:ui="clr-namespace:RuKiSo.UI"
    xmlns:vm="clr-namespace:RuKiSo.ViewModels"
    x:DataType="{x:Type vm:IngredientViewModel}">
    <Grid
        BackgroundColor="{x:Static ui:AppColors.PrimaryBackGround}"
        ColumnDefinitions="*"
        RowDefinitions="auto, *">
        <controls:Header Title="{x:Static resource:AppTexts.Ingredient}" HorizontalOptions="Fill" />
        <Grid
            Grid.Row="1"
            Padding="20,8,20,8"
            RowDefinitions="120,*">
            <Grid ColumnDefinitions="300,*,300,*,300">
                <controls:OverViewCard
                    Title="{x:Static resource:AppTexts.TotalIngredient}"
                    CustomWidthRequest="{x:Static ui:AppDimens.Height300}"
                    DesciptionText="{Binding TotalIngredient}"
                    ImageSource="{x:Static ui:StaticImage.TotalProduct}" />
                <controls:OverViewCard
                    Title="{x:Static resource:AppTexts.TotalValue}"
                    Grid.Column="2"
                    CustomWidthRequest="{x:Static ui:AppDimens.Height300}"
                    DesciptionText="{Binding TotalValue, StringFormat={x:Static resource:AppTexts.MoneyFormat}}"
                    ImageSource="{x:Static ui:StaticImage.TotalValue}" />
                <controls:OverViewCard
                    Title="{x:Static resource:AppTexts.EstimatedProfit}"
                    Grid.Column="4"
                    CustomWidthRequest="{x:Static ui:AppDimens.Height300}"
                    DesciptionText="{Binding EstimatedOutput, StringFormat={x:Static resource:AppTexts.MoneyFormat}}"
                    ImageSource="{x:Static ui:StaticImage.EstimatedProfit}" />
            </Grid>
            <Grid
                Grid.Row="1"
                Margin="0,10,0,0"
                ColumnDefinitions="300,*, 670"
                RowDefinitions="40,*">
                <Label
                    Style="{StaticResource PrimaryLabelStyle}"
                    Text="{Binding SelectedIngredient, Converter={StaticResource UpSertIngredientConverter}}"
                    VerticalOptions="Center" />
                <Border Grid.Row="1" Style="{StaticResource Border25BackGroundWhite}">
                    <VerticalStackLayout Padding="10,10,10,10" Spacing="{x:Static ui:AppDimens.Space7}">
                        <Label FontSize="{x:Static ui:AppDimens.FontSize16}" Text="{x:Static resource:AppTexts.Name}" />
                        <Entry
                            HorizontalOptions="Start"
                            Text="{Binding Name}"
                            WidthRequest="{x:Static ui:AppDimens.Height280}" />
                        <Label FontSize="{x:Static ui:AppDimens.FontSize16}" Text="{x:Static resource:AppTexts.Unit}" />
                        <Entry
                            HorizontalOptions="Start"
                            Text="{Binding Unit}"
                            WidthRequest="{x:Static ui:AppDimens.Height280}" />
                        <Label
                            Margin="0,0,10,0"
                            FontSize="{x:Static ui:AppDimens.FontSize16}"
                            Text="{x:Static resource:AppTexts.PurchasePrice}" />
                        <Entry
                            HorizontalOptions="Start"
                            IsEnabled="{Binding IsPurchasePriceEnabled}"
                            Text="{Binding PurchasePrice}"
                            WidthRequest="{x:Static ui:AppDimens.Height280}" />
                        <Label
                            Margin="0,0,10,0"
                            FontSize="{x:Static ui:AppDimens.FontSize16}"
                            Text="{x:Static resource:AppTexts.Quantity}" />
                        <Entry
                            HorizontalOptions="Start"
                            IsEnabled="{Binding IsQuantityEnabled}"
                            Text="{Binding Quantity}"
                            WidthRequest="{x:Static ui:AppDimens.Height280}" />
                        <HorizontalStackLayout>
                            <Button
                                BackgroundColor="{x:Static ui:AppColors.Yellow}"
                                Command="{Binding ResetCommand}"
                                HorizontalOptions="Center"
                                Text="{x:Static resource:AppTexts.Reset}"
                                TextColor="{x:Static ui:AppColors.Black}"
                                WidthRequest="{x:Static ui:AppDimens.Height127}" />
                            <Button
                                Margin="24,0,0,0"
                                Command="{Binding UpSertIngredientCommand}"
                                HorizontalOptions="Center"
                                Text="{Binding SelectedIngredient, Converter={StaticResource UpSertButtonConverter}}"
                                TextColor="{x:Static ui:AppColors.Black}"
                                WidthRequest="{x:Static ui:AppDimens.Height127}" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>
                <Label
                    Grid.Column="2"
                    Style="{StaticResource PrimaryLabelStyle}"
                    Text="{x:Static resource:AppTexts.IngredientsList}"
                    VerticalOptions="Center" />
                <HorizontalStackLayout
                    Grid.Column="2"
                    Margin="0,0,210,0"
                    HorizontalOptions="End">
                    <Label Text="{x:Static resource:AppTexts.Quantity}" VerticalOptions="Center" />
                    <Button
                        BackgroundColor="Transparent"
                        Command="{Binding QuantityFilterCommand}"
                        FontFamily="{x:Static ui:FontNames.FaSolid}"
                        FontSize="{x:Static ui:AppDimens.FontSize15}"
                        Text="{x:Static resource:AwesomeIcon.Filter}"
                        TextColor="{x:Static ui:AppColors.Black}" />
                    <Label Text="{x:Static resource:AppTexts.PurchasePrice}" VerticalOptions="Center" />
                    <Button
                        BackgroundColor="Transparent"
                        Command="{Binding PurchasePriceFilterCommand}"
                        FontFamily="{x:Static ui:FontNames.FaSolid}"
                        FontSize="{x:Static ui:AppDimens.FontSize15}"
                        Text="{x:Static resource:AwesomeIcon.Filter}"
                        TextColor="{x:Static ui:AppColors.Black}" />
                </HorizontalStackLayout>
                <CollectionView
                    Grid.Row="1"
                    Grid.Column="2"
                    ItemTemplate="{StaticResource IngredientItemDataTemplate}"
                    ItemsSource="{Binding Ingredients}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="{x:Static ui:AppDimens.Space10}" Orientation="Vertical" />
                    </CollectionView.ItemsLayout>
                </CollectionView>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>